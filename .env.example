# Keycloak Server Configuration
# URL of your Keycloak server (including /auth if using older versions)
NUXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080

# Keycloak realm name
NUXT_PUBLIC_KEYCLOAK_REALM=nuxt-app

# Keycloak client ID (must be a public client)
NUXT_PUBLIC_KEYCLOAK_CLIENT_ID=nuxt-client

# Application URL (used for redirects)
NUXT_PUBLIC_APP_URL=http://localhost:3000

# Server-side Configuration
# Enable server-side token verification
NUXT_KEYCLOAK_SERVER_VERIFY_TOKEN=true

# Enable server middleware for automatic token verification on all requests
NUXT_KEYCLOAK_SERVER_MIDDLEWARE=false

# JWKS cache duration in milliseconds (default: 600000 = 10 minutes)
NUXT_KEYCLOAK_SERVER_JWKS_CACHE_DURATION=600000

# Client-side Configuration
# Enable automatic token refresh
NUXT_KEYCLOAK_CLIENT_AUTO_REFRESH_TOKEN=true

# Minimum token validity in seconds before refresh
NUXT_KEYCLOAK_CLIENT_MIN_TOKEN_VALIDITY=30

# Persist refresh token in localStorage
NUXT_KEYCLOAK_CLIENT_PERSIST_REFRESH_TOKEN=true
